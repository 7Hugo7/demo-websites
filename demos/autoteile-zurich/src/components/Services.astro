---
interface Service {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  services: Service[];
  title?: string;
}

const { services, title = "Unsere Leistungen" } = Astro.props;
---

<section id="services" class="py-12 md:py-16 px-4 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-center mb-8 md:mb-12">{title}</h2>
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 md:gap-6 lg:gap-8">
      {services.map((service) => (
        <div class="bg-white p-4 md:p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          {service.icon && (
            <div class="text-3xl md:text-4xl mb-2 md:mb-4">{service.icon}</div>
          )}
          <h3 class="text-sm md:text-lg lg:text-xl font-semibold mb-2 md:mb-3 text-blue-600">{service.title}</h3>
          <p class="text-xs md:text-sm lg:text-base text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
