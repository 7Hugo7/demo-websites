---
interface Props {
  companyName: string;
  phone?: string;
  currentPage?: string;
}

const { companyName, phone, currentPage = 'home' } = Astro.props;
---

<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-xl md:text-2xl font-bold text-blue-600 hover:text-blue-700 transition-colors">{companyName}</a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        <a href="/" class={`transition-colors ${currentPage === 'home' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Home</a>
        <a href="/leistungen" class={`transition-colors ${currentPage === 'leistungen' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Leistungen</a>
        <a href="/ueber-uns" class={`transition-colors ${currentPage === 'ueber-uns' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Über uns</a>
        <a href="/kontakt" class={`transition-colors ${currentPage === 'kontakt' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Kontakt</a>
        {phone && (
          <a href={`tel:${phone.replace(/\s/g, '')}`} class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
            {phone}
          </a>
        )}
      </div>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-toggle" class="md:hidden text-gray-700 hover:text-blue-600 p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-3">
      <a href="/" class={`block transition-colors ${currentPage === 'home' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Home</a>
      <a href="/leistungen" class={`block transition-colors ${currentPage === 'leistungen' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Leistungen</a>
      <a href="/ueber-uns" class={`block transition-colors ${currentPage === 'ueber-uns' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Über uns</a>
      <a href="/kontakt" class={`block transition-colors ${currentPage === 'kontakt' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Kontakt</a>
      {phone && (
        <a href={`tel:${phone.replace(/\s/g, '')}`} class="block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-center">
          {phone}
        </a>
      )}
    </div>
  </div>
</nav>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
