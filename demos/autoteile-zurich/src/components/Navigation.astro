---
interface Props {
  companyName: string;
  phone?: string;
  currentPage?: string;
}

const { companyName, phone, currentPage = 'home' } = Astro.props;
---

<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-bold text-blue-600 hover:text-blue-700 transition-colors">{companyName}</a>
      <div class="flex items-center gap-6">
        <a href="/" class={`hidden md:block transition-colors ${currentPage === 'home' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Home</a>
        <a href="/leistungen" class={`hidden md:block transition-colors ${currentPage === 'leistungen' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Leistungen</a>
        <a href="/ueber-uns" class={`hidden md:block transition-colors ${currentPage === 'ueber-uns' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Ãœber uns</a>
        <a href="/kontakt" class={`hidden md:block transition-colors ${currentPage === 'kontakt' ? 'text-blue-600 font-semibold' : 'text-gray-700 hover:text-blue-600'}`}>Kontakt</a>
        {phone && (
          <a href={`tel:${phone.replace(/\s/g, '')}`} class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
            {phone}
          </a>
        )}
      </div>
    </div>
  </div>
</nav>
