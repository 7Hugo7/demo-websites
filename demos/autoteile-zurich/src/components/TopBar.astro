---
interface Props {
  email?: string;
  phone?: string;
  promotion?: string;
  backgroundColor?: string;
}

const { email, phone, promotion, backgroundColor = '#4D7ABF' } = Astro.props;
---

<div class="text-white py-2 px-4 text-xs md:text-sm" style={`background-color: ${backgroundColor}`}>
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row md:items-center md:justify-between gap-2 md:gap-4">
    <div class="flex flex-col sm:flex-row sm:items-center gap-2 md:gap-4">
      {phone && (
        <a href={`tel:${phone.replace(/\s/g, '')}`} class="hover:underline">
          Tel: {phone}
        </a>
      )}
      {email && (
        <a href={`mailto:${email}`} class="hover:underline">
          {email}
        </a>
      )}
    </div>
    {promotion && (
      <div class="font-semibold">
        {promotion}
      </div>
    )}
  </div>
</div>
