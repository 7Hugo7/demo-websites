---
import Layout from '../layouts/Layout.astro';
import TopBar from '../components/TopBar.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import ImageCard from '../components/ImageCard.astro';
import Footer from '../components/Footer.astro';
import AIChat from '../components/AIChat.astro';

const services = [
  {
    title: "Metallspritzen",
    description: "Lichtbogen- und Flammspritzen für Korrosionsschutz und Verschleissschutz."
  },
  {
    title: "HVOF-Spritzen",
    description: "Hochgeschwindigkeits-Flammspritzen für extreme Beanspruchungen."
  },
  {
    title: "Plasma-Beschichtung",
    description: "Hochtemperatur-Beschichtungen für höchste Anforderungen."
  },
  {
    title: "Sandstrahlen",
    description: "Professionelle Oberflächenvorbereitung für optimale Haftung."
  }
];

const openingHours = [
  { day: "Mo - Do", hours: "07:00 - 12:00, 13:30 - 17:00" },
  { day: "Fr", hours: "07:00 - 12:00, 13:30 - 16:00" },
  { day: "Sa & So", hours: "Geschlossen" }
];
---

<Layout
  title="Leistungen - Bührer AG"
  description="Thermisches Spritzen, Plasma-Beschichtung und Sandstrahlen. HVOF, Lichtbogen- und Flammspritzen für industrielle Anwendungen."
>
  <TopBar
    email="info@buehrer-ag.ch"
    phone="+41 (0)44 844 25 50"
    promotion="Professionelle Oberflächentechnik seit 1965 - Kostenlose Beratung!"
  />
  <Navigation companyName="Bührer AG" phone="+41 (0)44 844 25 50" currentPage="leistungen" />

  <Hero
    title="Unsere Leistungen im Überblick"
    subtitle="Professionelle Oberflächentechnik für Industrie und Maschinenbau"
    backgroundImage="https://www.buehrer-ag.ch/wp-content/uploads/2016/02/JAU7197.jpg"
  />

  <Services services={services} />

  <section class="py-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Anwendungsbereiche</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        <ImageCard
          src="https://www.buehrer-ag.ch/wp-content/uploads/2015/08/P1010029-175x145.jpg"
          alt="Korrosionsschutz"
          title="Korrosionsschutz"
        />
        <ImageCard
          src="https://www.buehrer-ag.ch/wp-content/uploads/2015/08/P10100021-175x145.jpg"
          alt="Verschleissschutz"
          title="Verschleissschutz"
        />
        <ImageCard
          src="https://www.buehrer-ag.ch/wp-content/uploads/2015/08/Kolbenstange21-175x145.jpg"
          alt="Bauteilreparatur"
          title="Bauteilreparatur"
        />
        <ImageCard
          src="https://www.buehrer-ag.ch/wp-content/uploads/2015/09/IMG_1997-175x145.jpg"
          alt="Neubeschichtung"
          title="Neubeschichtung"
        />
      </div>
    </div>
  </section>

  <section class="py-16 px-4 bg-gray-50">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4 md:mb-6">Individuelle Beratung gewünscht?</h2>
      <p class="text-sm md:text-base text-gray-600 mb-6 md:mb-8">
        Die Experten von Bührer AG beraten Sie gerne zu Ihrem Projekt. Rufen Sie uns an unter +41 (0)44 844 25 50
        oder kontaktieren Sie uns für ein unverbindliches Angebot. Wir finden die optimale Beschichtungslösung für Ihre Anforderungen.
      </p>
      <a href="/kontakt" class="inline-block bg-[#4D7ABF] text-white px-6 md:px-8 py-3 md:py-4 rounded-lg hover:bg-[#3D6AAF] transition-colors font-semibold text-sm md:text-base">
        Jetzt unverbindlich anfragen
      </a>
    </div>
  </section>

  <Footer
    companyName="Bührer AG"
    phone="+41 (0)44 844 25 50"
    email="info@buehrer-ag.ch"
    openingHours={openingHours}
  />
  <AIChat
    businessType="industrial"
    companyName="Bührer AG"
    phone="+41 (0)44 844 25 50"
    mapsUrl="https://www.google.com/maps/place/Lauetstrasse+13,+8112+Otelfingen"
    primaryColor="#4D7ABF"
  />
</Layout>
